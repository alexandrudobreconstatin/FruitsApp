{% extends 'base.html.twig' %}

{% block body %}
    <header class="bg-primary py-3">
        <div class="container">
            <h2 class="text-white">Fruits App Api</h2>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item{% if app.request.get('_route') == 'app_list_fruits' %} active{% endif %}">
                        <a class="nav-link" href="{{ path('app_list_fruits') }}">List Fruits</a>
                    </li>
                    <li class="nav-item{% if app.request.get('_route') == 'app_list_favorites' %} active{% endif %}">
                        <a class="nav-link" href="{{ path('app_list_favorites') }}">Fruits Favorite</a>
                    </li>
                    <li class="nav-item{% if app.request.get('_route') == 'app_settings' %} active{% endif %}">
                        <a class="nav-link" href="{{ path('app_settings') }}">User Setting</a>
                    </li>
                    <li class="nav-item{% if app.request.get('_route') == 'app_action' %} active{% endif %}">
                        <a class="nav-link" href="{{ path('app_action') }}">Action</a>
                    </li>
                </ul>
                {% if app.user %}
                    <div class="user-info ml-auto">
                        <span>{{ app.user.username }}</span>
                        <span class="favorites-counter">
                            <i class="fas fa-heart"></i>
                            <span id="favorites-count">{{ favorites|length }}</span>
                        </span>
                    </div>
                {% endif %}
            </div>
        </div>
    </nav>

    {% block dashboard_content %}{% endblock %}
{% endblock %}
